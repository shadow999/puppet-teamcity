# File is managed by Puppet

[Unit]
Description=TeamCity Build Agent
After=network.target

[Service]
Type=forking
User=<%= scope['::teamcity::agent_user'] %>
PIDFile=<%= scope['::teamcity::agent_dir'] %>/logs/buildAgent.pid
ExecStart=<%= scope['::teamcity::agent_dir'] %>/bin/agent.sh start
ExecStop=<%= scope['::teamcity::agent_dir'] %>/bin/agent.sh stop

[Install]
WantedBy=multi-user.target
